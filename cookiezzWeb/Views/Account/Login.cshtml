@model cookiezz.Models.LoginViewModel
@{
    ViewBag.Title = "Create";
}

<h1>Giriş</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <label asp-for="UserName">Kullanıcı Adı</label>
                    <input type="text" class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="form-text text-muted"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Şifre</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="form-text text-muted"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </section>
    </div>
    
</div>

