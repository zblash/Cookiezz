@model IEnumerable<cookiezz.Models.Product>
@{
    ViewData["Title"] = "Cookiezz";
}

<div class="section">
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">TÜM ÜRÜNLER</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab2" class="tab-pane fade in active">
                            <div class="products-slick" data-nav="#slick-nav-2">
                                @foreach (var item in Model)
                                {        
                                <div class="product">
                                    <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">
                                    <div class="product-img">
                                        <img src="/uploads/@item.ImageUrl" alt="">
                                        <div class="product-label">
                                            <span class="sale">YENİ</span>
                                        </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@Html.DisplayFor(modelItem => item.Category.CategoryName)</p>
                                        <h3 class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.ProductName)</a></h3>
                                        <h4 class="product-price">@Html.DisplayFor(modelItem => item.Price) TL</h4>
                                    </div>
                                    </a>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Sepete Ekle</button>
                                    </div>
                                </div>
                                }
                            </div>
                            <div id="slick-nav-2" class="products-slick-nav"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


